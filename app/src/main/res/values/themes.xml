<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light/dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Surface and background for dark look -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />

    <!-- Shape appearance for rounded movie posters -->
    <style name="ShapeAppearance.MoviePoster" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>